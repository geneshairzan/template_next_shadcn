{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"],
      "@ui": ["./src/components/ui/index.js"],
      "@form": ["./src/components/form/index.js"],
      "@context/*": ["./src/components/context/*"],
      "@context": ["./src/components/context/index.js"],
      "@component/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@lib/*": ["./src/lib/*"],
      "@fetcher": ["./src/lib/useFetch.js"],
      "@convexAPI": ["./convex/_generated/api.js"]
    }
  },
  "include": ["next-env.d.ts", "**/*.mts", "**/*.ts", "**/*.tsx", "src/lib/prisma.js"],
  "exclude": ["node_modules"]
}
